<Page x:Class="ApmMedical.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApmMedical.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница Администратора">

    <Grid>
        
        <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button  Style="{StaticResource MainButtonMenu}"   Content="Отделения больницы" x:Name="OtdelButton" Click="OtdelButton_Click"/>
            <Button  Style="{StaticResource MainButtonMenu}" Content="Пациенты" x:Name="BolnieButton" Click="BolnieButton_Click"/>
            <Button  Style="{StaticResource MainButtonMenu}" Content="Врачи" x:Name="MedicButton" Click="MedicButton_Click"/>
            <Button  Style="{StaticResource MainButtonMenu}" Content="Температурный лист" x:Name="TemperatrueButton" Click="TemperatrueButton_Click" />

        </StackPanel>
        <StackPanel Style="{StaticResource PanelForImg}">
            <Image Source="..\Resources\img\i.jpg" Style="{StaticResource PanelImg}"/>
        </StackPanel>
        

    </Grid>
</Page>
